<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.rsschooltask5.ui.fragments.ListFragment"
        tools:layout="@layout/fragment_list"
        android:label="ListFragment" >
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:enterAnim="@animator/flip_enter_left"
            app:exitAnim="@animator/flip_exit_left"
            app:popEnterAnim="@animator/flip_enter_right"
            app:popExitAnim="@animator/flip_exit_right" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        tools:layout="@layout/fragment_detail"
        android:name="com.example.rsschooltask5.ui.fragments.DetailFragment"
        android:label="DetailFragment" />
</navigation>